<resources>

	 <!-- Base application theme. -->
	 <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		  <!-- Customize your theme here. -->
		  <item name="colorPrimary">@color/colorPrimary</item>
		  <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		  <item name="colorAccent">@color/colorAccent</item>
	 </style>

	 <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	 <style name="overview_fragment_title_text_style">
		  <item name="android:layout_width">match_parent</item>
		  <item name="android:layout_height">wrap_content</item>
		  <item name="android:background">@color/colorAccent</item>
		  <item name="android:fontFamily">times</item>
		  <item name="android:padding">@dimen/layout_padding_16dp</item>
		  <item name="android:textColor">@color/whiteText</item>
		  <item name="android:textSize">24sp</item>
		  <item name="android:textStyle">bold</item>
	 </style>

	 <style name="overview_fragment_summary_text">
		  <item name="android:layout_width">match_parent</item>
		  <item name="android:layout_height">wrap_content</item>
		  <item name="android:layout_marginTop">@dimen/layout_margin_16dp</item>
		  <item name="android:fontFamily">sans-serif-light</item>
		  <item name="android:paddingLeft">@dimen/layout_padding_16dp</item>
		  <item name="android:paddingRight">@dimen/layout_padding_16dp</item>
		  <item name="android:textColor">@color/h1_text</item>
		  <item name="android:textSize">16sp</item>
	 </style>

</resources>
