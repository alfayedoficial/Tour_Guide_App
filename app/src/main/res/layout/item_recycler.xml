<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:layout_width="match_parent"
	 android:layout_height="wrap_content"
	 android:layout_marginBottom="@dimen/layout_margin_8dp"
	 app:cardBackgroundColor="@color/whiteText"
	 app:cardCornerRadius="@dimen/layout_padding_10dp"
	 app:cardElevation="@dimen/layout_padding_10dp"
	 app:cardMaxElevation="@dimen/layout_padding_10dp"
	 app:contentPadding="@dimen/layout_margin_8dp">

	 <RelativeLayout
		  android:id="@+id/itemRecyclerView"
		  android:layout_width="match_parent"
		  android:layout_height="wrap_content">

		  <LinearLayout
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:orientation="horizontal">

			   <ImageView
					android:id="@+id/list_item_image"
					android:layout_width="@dimen/layout_width_80dp"
					android:layout_height="@dimen/layout_height_80dp"
					android:scaleType="centerCrop"
					tools:ignore="ContentDescription" />

			   <LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="@dimen/layout_margin_8dp"
					android:orientation="vertical"
					android:padding="@dimen/layout_padding_16dp">

					<TextView
						 android:id="@+id/list_item_name_place"
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:fontFamily="sans-serif"
						 android:gravity="clip_vertical"
						 android:textColor="@color/h1_text"
						 tools:text="Union Station" />

					<TextView
						 android:id="@+id/list_item_address_place"
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:fontFamily="sans-serif-light"
						 android:gravity="clip_vertical"
						 android:textColor="@color/h1_text"
						 tools:text="toronto, ontario" />
			   </LinearLayout>
		  </LinearLayout>

		  <ImageView
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_alignParentEnd="true"
			   android:layout_centerVertical="true"
			   android:layout_marginEnd="@dimen/layout_margin_16dp"
			   android:src="@drawable/ic_baseline_arrow_forward_ios_24"
			   tools:ignore="ContentDescription" />
	 </RelativeLayout>

</androidx.cardview.widget.CardView>